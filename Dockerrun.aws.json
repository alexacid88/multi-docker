{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "alexacid88/multi-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "alexacid88/multi-server",
      "hostname": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "worker",
      "image": "alexacid88/multi-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "alexacid88/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort":80
        }
      ],
      "links": ["client", "server"],
      "memory": 256
    },
    {
      "name": "redis",
      "image": "redis",
      "hostname": "redis",
      "essential": false,
      "portMappings": [
        {
          "hostPort": 6379,
          "containerPort":6379
        }
      ],
      "memory": 256
    },
    {
      "name": "postgres",
      "image": "postgres",
      "hostname": "postgres",
      "essential": false,
      "portMappings": [
        {
          "hostPort": 5432,
          "containerPort":5432
        }
      ],
      "memory": 256
    }
  ]
}
